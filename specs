API

order
    Filter: house=<house_number>

{
    id: <generated_id>
    house: <house_number>
    for:
        type: LUNCH | DINNER
        date: <date>
    items:
        item: ITEM
        qty: <quantity>
 }

menu

{
    for:
        type: LUNCH | DINNER
        date: <date>
    items: ITEM List
}

item
{
    id
    name: <item_name>
    category: <category_name>
    price: <price>
    dishes:
        dish: <dish_name>
        serving: <serving_qty>
}

dish
{
    id: <generated_id>
    name: <dish_name>
    ingredients:
        ingredient: <ingredient_name>
        qty: <ingredient_qty>
}
